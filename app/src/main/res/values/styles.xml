<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="theme_blue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="theme_green" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_minefragment_top</item>
        <item name="colorPrimaryDark">@color/greenlight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="theme_orange" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryDark">@color/lightsalmon</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="theme_red" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/redred</item>
        <item name="colorPrimaryDark">@color/redredlight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="theme_pink" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pinkpink</item>
        <item name="colorPrimaryDark">@color/pinkpinklight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="theme_black" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/silver</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



</resources>
